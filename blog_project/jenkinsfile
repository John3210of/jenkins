pipeline {
    agent any
    environment {
        IMAGE_NAME = 'john3210of/apiserver:4.0'
        DOCKERHUB_CREDENTIALS = credentials("docker-hub")
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/John3210of/jenkins', branch: 'main'
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} blog_project"
                }
            }
        }
        stage('Run Tests with Coverage') {
            steps {
                script {
                    sh "docker run -d --name test_container ${IMAGE_NAME}"
                    sh "docker exec test_container sh -c 'python3 -m venv venv && ./venv/bin/pip install -r requirements.txt && ./venv/bin/coverage run --source=\"blog\" manage.py test blog.tests && ./venv/bin/coverage report -m'"
                    sh "docker stop test_container"
                    sh "docker rm test_container"
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    sh "docker push ${IMAGE_NAME}"
                }
            }
        }
    }
    post {
        always {
            echo "Pipeline execution completed."
        }
        success {
            echo "All stages completed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
