pipeline {
    agent any
    environment {
        IMAGE_NAME = 'john3210of/apiserver:2.0'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/John3210of/jenkins', branch: 'main'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'python3 -m venv venv'
                sh './venv/bin/pip install coverage'
            }
        }
        stage('Run Tests with Coverage') {
            steps {
                sh './venv/bin/coverage run -m unittest discover -s tests'
                sh './venv/bin/coverage report -m'
            }
        }
        stage('Docker Login and Run Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'root', usernameVariable: 'ROOT_USER', passwordVariable: 'ROOT_PASSWORD')]) {
                        sh "echo ${ROOT_PASSWORD} > /tmp/sudo_password"
                        sh "sudo -S docker pull ${IMAGE_NAME} < /tmp/sudo_password"
                        sh "sudo -S docker stop apiserver || true < /tmp/sudo_password"
                        sh "sudo -S docker rm apiserver || true < /tmp/sudo_password"
                        sh "sudo -S docker run -d --name apiserver -p 5000:5000 ${IMAGE_NAME} < /tmp/sudo_password"
                        sh "rm -f /tmp/sudo_password"
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo "Pipeline execution completed."
        }
        success {
            echo "All stages completed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
