pipeline {
    agent any
    environment {
        IMAGE_NAME = 'john3210of/apiserver:3.0'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/John3210of/jenkins', branch: 'main'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'python3 -m venv venv'
                sh './venv/bin/pip install coverage'
            }
        }
        stage('Run Tests with Coverage') {
            steps {
                // Docker Hub에 로그인
                withCredentials([usernamePassword(credentialsId: 'john3210of', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                }
                sh './venv/bin/coverage run -m unittest discover -s tests'
                sh './venv/bin/coverage report -m'
            }
        }
        stage('Docker Build and Push') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} ."
                    sh "docker push ${IMAGE_NAME}"
                }
            }
        }
        stage('Kubernetes Deploy') {
            steps {
                script {
                    sh "kubectl apply -f deployment.yaml"
                    sh "kubectl apply -f service.yaml"
                }
            }
        }
    }
    
    post {
        always {
            echo "Pipeline execution completed."
        }
        success {
            echo "All stages completed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
